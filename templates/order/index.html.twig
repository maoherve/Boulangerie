{% extends 'layout.html.twig' %}


{% block main %}
    <div class="orderContainer container container-fluid">
        <div class="form-control mb-5">
            {{ form_start(form) }}
            <div class="row justify-content-between mb-4 mt-3">
                <div class="col">
                    {{ form_row(form.Demande) }}
                </div>

                <div class="col" id="some-custom-id">
                    {{ form_row(form.Nom) }}
                </div>

                <div class="col" id="some-custom-id">
                    {{ form_row(form.Numero) }}
                </div>

                <div class="col" id="some-custom-id">
                    {{ form_row(form.Email) }}
                </div>
            </div>
                {{ form_row(form.Message) }}
                <div class="modal-footer">
                    <button class="btn btn-primary">Envoyer</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block footer %}
    {% include 'includes/_fixedFooter.html.twig' %}
{% endblock %}
