{% extends 'layout.html.twig' %}

{% block main %}
    <div class="mapContainer container container-fluid">
        <h2>Boulangerie Marseilles-lès-aubigny.</h2>
        <p>2 quai Auguste Mahaut, 18320 Marseilles-lès-aubigny</p>

        <div id="maCarte" class="mb-3">
            <!-- view of the map here -->
        </div>
    </div>


    {% block javascripts %}
        {{ parent() }}
        <!-- Files Javascript -->
        <script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js"
                integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw==" crossorigin="">
        </script>

        <script>
            // we initialise the map
            var carte = L.map('maCarte').setView([47.0675000, 3.0151000], 17);

            // Leaflet don't recovers tiles on default server, we need to show the path. Here openstreetmap.fr
            L.tileLayer('https://{s}.tile.openstreetmap.fr/osmfr/{z}/{x}/{y}.png', {

                // link for source
                attribution: 'données © <a href="//osm.org/copyright">OpenStreetMap</a>/ODbL - rendu <a href="//openstreetmap.fr">OSM France</a>',
                minZoom: 13,
                maxZoom: 20,
            }).addTo(carte);

            // add an pointer
            var marker = L.marker([47.0675000, 3.0151000]).addTo(carte);

        </script>
    {% endblock %}
{% endblock %}
