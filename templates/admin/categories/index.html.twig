{% extends 'adminLayout.html.twig' %}


{% block main %}
    <div class="adminContainer container container-fluid">
        <h2>Menu des catégories :</h2>

                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for category in categories %}
                        <tr>
                            <td>{{ category.id }}</td>
                            <td>{{ category.name }}</td>
                            <td>
                                <a href="{{ path('admin_categories_edit', {'id': category.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">Pas de catégories disponible !</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('admin_categories_new') }}">Créer une nouvelle catégories !</a>
    </div>
{% endblock %}
