{% extends 'adminLayout.html.twig' %}


{% block main %}
    <div class="adminContainer container container-fluid">
        <h2>Products index</h2>

            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Ingredient</th>
                        <th>ImageName</th>
                        <th>Category</th>
                        <th>Updated</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for product in products %}
                    <tr>
                        <td>{{ product.id }}</td>
                        <td>{{ product.name }}</td>
                        <td>{{ product.ingredient }}</td>
                        <td>{{ product.imageName }}</td>
                        <td>{{ product.categories.name }}</td>
                        <td>{{ product.updated ? product.updated|date('d-m-Y H:i') : '' }}</td>
                        <td>
                            <a href="{{ path('admin_products_edit', {'id': product.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('admin_products_new') }}">Create new</a>
    </div>
{% endblock %}
