{% extends 'layout.html.twig' %}

{% block main %}
    <div class="productContainer container container-fluid  mb-5">

            <div class="container container-fluid justify-content-center row">
                    {% for category in categories %}
                        <a class="btnProduct btn m-3 col-auto" href="{{ path('products_show_category', { 'categoryName' : category.name }) }}">
                            {{ category.name }}
                        </a>
                    {% endfor %}
              </div>

        <div class="row">
            {% for product in products %}
                <div class="productCard container mt-5 ">
                        <img src="{{ vich_uploader_asset(product, 'imageFile') }}" class="productPicture  mt-2 " alt="product picture">

                        <div class="middle card-body">
                            <p class="productTitle card-text">{{ product.name }}</p>
                        </div>
                </div>
            {% else %}
                <div class="card-body">Pas de produit disponible dans cette cat√©gorie !</div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
