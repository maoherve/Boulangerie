<form method="post" action="{{ path('admin_products_delete', {'id': product.id}) }}" onsubmit="return confirm('La suppression est irréversible, êtes-vous sûr de vouloir continuer ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
    <button class="deleteBtn btn mt-2">Supprimer</button>
</form>
