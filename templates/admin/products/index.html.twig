{% extends 'adminLayout.html.twig' %}


{% block main %}
    <div class="adminContainer container container-fluid">
        <h2>Menu des produits :</h2>

            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Ingredient</th>
                        <th>Nom de l'image</th>
                        <th>Categorie</th>
                        <th>Mise à jour</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for product in products %}
                    <tr>
                        <td>{{ product.id }}</td>
                        <td>{{ product.name }}</td>
                        <td>{{ product.ingredient }}</td>
                        <td>{{ product.imageName }}</td>
                        <td>{{ product.categories.name }}</td>
                        <td>{{ product.updated ? product.updated|date('d-m-Y H:i') : '' }}</td>
                        <td>
                            <a href="{{ path('admin_products_edit', {'id': product.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">Pas de produit disponible !</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('admin_products_new') }}">Créer un nouveau produit !</a>
    </div>
{% endblock %}
